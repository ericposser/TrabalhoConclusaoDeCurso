@model PlataformaInvestimentos.Models.Usuario

@{
    ViewData["Title"] = "Trocar Nome";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4 d-flex justify-content-center align-items-center gap-2">
            <i data-lucide="edit-2" style="width: 1.5rem; height: 1.5rem;"></i>
            <h4 class="m-0">Alterar Nome</h4>
        </div>
        <p class="text-muted text-center small mb-4">Atualize seu nome de usu√°rio</p>

        <form asp-action="TrocarNome" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label class="form-label">Novo Nome</label>
                <input type="text" name="novoNome" class="form-control" placeholder="Digite seu novo nome" required />
                <span asp-validation-for="Login" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-primary">
                    <i data-lucide="save" class="me-1" style="width: 1rem; height: 1rem;"></i> Salvar
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small><a href="/Home/Index" class="text-decoration-none">Voltar</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <script>lucide.createIcons();</script>
}