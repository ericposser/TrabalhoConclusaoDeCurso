@model ErrorViewModel
@{
    ViewData["Title"] = "Página não encontrada";
}

<link rel="stylesheet" href="~/css/erro.css" asp-append-version="true" />

<div class="error-wrapper d-flex flex-column justify-content-center align-items-center text-center">
    <h1 class="display-1 fw-bold text-primary">404</h1>
    <h2 class="mb-3 text-dark">Page Not Found ⚠️</h2>
    <p class="text-muted mb-4">Não conseguimos encontrar a página que você está procurando.</p>

    <a href="/Home/Index" class="btn btn-primary px-4 py-2 shadow-sm">Voltar para o início</a>
</div>